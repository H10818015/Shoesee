<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="20dp"
        android:src="@drawable/sport_shoes"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:elevation="3dp"
        app:layout_constraintWidth_percent=".97"
        android:background="@drawable/dynamic_rv_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
        android:id="@+id/brand0"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:fontFamily="@font/rubik_bold"
        android:textStyle="bold"
        android:text="brand"
        android:textSize="24sp"
        android:textColor="#ff8033"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shoes_name0"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:fontFamily="@font/rubik_bold"
            android:text="item name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:maxEms="13"
            android:ellipsize="end"
            android:layout_marginTop="-30sp"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/brand0"
            app:layout_constraintTop_toBottomOf="@+id/brand0" />

        <TextView
            android:id="@+id/textview10"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:fontFamily="@font/rubik_bold"
            android:text="$ "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="-15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/shoes_name0"
            app:layout_constraintTop_toBottomOf="@+id/shoes_name0" />


        <TextView
            android:id="@+id/price0"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/rubik_bold"
            android:text="3000"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview10"
            app:layout_constraintStart_toStartOf="@+id/textview10"
            app:layout_constraintTop_toBottomOf="@+id/shoes_name0"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>